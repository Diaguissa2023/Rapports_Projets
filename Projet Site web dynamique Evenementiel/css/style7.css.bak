body 
{
    background: #FFFFFF; 
}
.site
{
    font-family: 'Holtwood One SC', sans-serif;
}
.text-logo
{
    font-family: 'Holtwood One SC', sans-serif;
    color: #e7480f;
    text-shadow: 2px 2px #ffd301;
    font-size: 50px;
    padding: 40px 0px;
    text-align: center;
}

p
{
    color: green;
}

h2,h1,h3
{
    color: Scarlet;
}

.nav
{
   margin-bottom: 0px;
}
.thumbnail img
{
    background: #ffd301;
}




.navbar
{
    background: #0069d6;
    font-size: 10px;
    letter-spacing: 3px;
    text-transform: uppercase;
    font-weight: bold;
}
.navbar .navbar-nav
{
    display: inline-block;
    float: none;
    vertical-align: top;
}
.navbar .navbar-collapse
{
    text-align: center;
}
.navbar li a
{
    color: #fff !important;
}
.navbar-nav li a:hover, .navbar-nav li.active a
{
    color: #0069d6 !important;
    background-color: #fff !important;
}
.navbar-default .navbar-toggle
{
    border-style: none;
}
.icon-bar
{
    background-color: #fff !important;
}



#portfolio
{
    background: #0069d6;
}
#portfolio .heading h2
{
    color: #fff;
}
#portfolio .thumbnail img
{
    width: 100%;
    height: 100%;
    filter: grayscale(100%);
    -webkit-filter: grayscale(100%); 
}
#portfolio .thumbnail img:hover
{
     filter: none;
    -webkit-filter: none; 
}


/* RECOMMANDATIONS */
#recommandations
{
    background: #fff;
}
#recommandations .heading h2
{
  color: #0069d6;
}
.carousel-control.left, .carousel-control.right
{
    background-image: none;
    color: #0069d6;
}
.carousel-indicators
{
    bottom: 0px;
}
.carousel-indicators li
{
    border-color: #0069d6;
}
.carousel-indicators li.active
{
    background-color: #0069d6;
}
#myCarousel .item
{
    padding: 40px 30px;
}
#myCarousel .item h3
{
    color: #0069d6;
    font-style: italic;
}

/* FOOTER */
footer
{
    background: #333;
    padding: 20px 0 40px;
}
footer .glyphicon
{
    font-size:  25px;
    margin: 20px;
    color: #0069d6;
    height: 30px;
}
footer .glyphicon:hover
{
    font-size:  27px;
}
footer h5
{
    color: #fff;
    font-weight: normal;
}




/* formulaire de contact */

#contact
{
	background: #0069d6;
	/*background: #0069d6;*/
	
}

#contact .heading h2
{
	color: #fff;
}

#contact-form
{
	font-size: 20px;
	color: #fff;
}

.form-control
{
	height: 50px;
	font-size: 18px;
}
.comments
{
	font-style: italic;
	font-size: 18px;
	color: #fff;
	height: 25px;
}
#contact-form input[type=submit]
{
	margin: 40px auto 0px;
	display: block;
}

.thank-you
{
	text-align: center;
	margin-top: 15px;
	font-weight: bold;
	font-size: 22px;
}





