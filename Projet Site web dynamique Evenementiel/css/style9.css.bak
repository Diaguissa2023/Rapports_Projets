#mon_formulaire_body{
   margin:0;
   
   font-family: "Lato" , sans-serif;
	margin: 70px 0px;
	background: #0069d6;
    text-align: center;
	margin-bottom: 60px;
  
}
#mon_formulaire_conteneur{
   margin:0;
   padding:10px;
   background:linear-gradient(to bottom,#DDDDDD,#FFFFFF);
}
.mon_formulaire_fieldset{
   margin:10px;
   border:none;
   background-color:#FFFFFF;
   border-radius:10px;
   padding:20px;
}
.mon_formulaire_legend{
   font-family:verdana, arial, sans-serif;
   font-size:14pt;
   font-weight:bold;
   color:#FFFFFF;
   margin:10px;
   padding:10px 20px 10px 20px;
   background-color:#AAAAAA;
   border-radius:4px;
}
.mon_formulaire_label{
   display:inline-block;
   width:200px;
   font-family:verdana, arial, sans-serif;
   
   padding:10px;
   font-style: italic;
font-size: 18px;
color: #0069d6;
height: 25px;
}
.mon_formulaire_input{
   display:inline-block;
   width:200px;
   padding:6px;
}
.mon_formulaire_champ{
   outline:none;
   border:solid 1px   #ffa500;
   padding:10px;
   border-radius:4px;
   font-family:verdana, arial, sans-serif;
   
 
}
input[type="text"].mon_formulaire_champ:focus, input[type="password"].mon_formulaire_champ:focus{
   background-color:#FFFFFF;
}
input[type="submit"].mon_formulaire_champ{
   background-color:#EE6600;
   color:#FFFFFF;
   padding:6px 20px 6px 20px;
   border:none;
   cursor:pointer;
   padding:10px;
   width:160px;
   
   
   text-align: center;
	margin-top: 15px;
	font-weight: bold;
	font-size: 22px;
}









